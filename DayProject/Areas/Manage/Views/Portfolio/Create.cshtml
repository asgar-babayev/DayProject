@{
    ViewData["Title"] = "Create";
}

@model DayProject.Models.Portfolio

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Url"></label>
            <input asp-for="Url" class="form-control">
            <span asp-validation-for="Url"></span>
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories,nameof(Model.Category.Id),nameof(Model.Category.Name)))">
                <option disabled selected>Categories</option>
            </select>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="ImageFile"></label>
            <input asp-for="ImageFile" class="form-control">
            <span asp-validation-for="ImageFile"></span>
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

